<script
  src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js"
></script>
<script
  src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"
></script>
<link rel="stylesheet" href="/stylesheets/style.css" />

<div id="chat">
  <h1>Chat</h1>
  <div id="chat-content">
    <ul id="mensajes">
    </ul>
  </div>
  <form>
    <input type="text" id="msj" name="m" />
    <input id="button" type="submit" value="Enviar" />
  </form>
</div>
<script>
  var socket = io(); $('form').submit(function(e){ e.preventDefault();
  socket.emit('chat message', $('#msj').val()); $('#msj').val(''); return false;
  }); socket.on('chat message', function(msg){
  $('#mensajes').append($('<li>').text(msg)); });
</script>